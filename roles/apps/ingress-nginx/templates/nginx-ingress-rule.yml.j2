apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress-nginx
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: myapi.com
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: svcnginx
            port:
              number: 80